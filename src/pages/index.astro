---
import Layout from "../layouts/BaseLayout.astro";
import GalleryCard from "../components/GalleryCard.astro";
import data from "../data.json";
---

<Layout title="Frontend Mentor | Galleria slideshow site" startSlideshow={true}>
  <div class="container" data-page="index">
    <h1 class="visually-hidden">Galleria</h1>
    <div class="gallery-cards">
      {
        data.map((item) => (
          <GalleryCard
            imageThumbnail={item.images.thumbnail}
            link={`details/${item.name.toLocaleLowerCase().replace(/\s+/g, "-")}`}
            linkHeader={item.name}
            artistName={item.artist.name}
          />
        ))
      }
    </div>
  </div>
</Layout>

<style lang="scss">
  @use "../styles/abstracts/" as *;

  .gallery-cards {
    display: grid;
    column-gap: 0;
    row-gap: $size-6;
    max-width: 25rem;
    margin-inline: auto;

    @include mq(medium) {
      grid-template-columns: repeat(2, 1fr);
      grid-auto-rows: 5px;
      column-gap: $size-10;
      row-gap: 0;
      max-width: 43.75rem;
    }

    @include mq(xmedium) {
      grid-template-columns: repeat(4, 1fr);
      max-width: revert;
    }
  }
</style>
